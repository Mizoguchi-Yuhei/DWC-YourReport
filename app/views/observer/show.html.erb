<div class="container">
	<div class="row">
		<div class="mt-3">
	    <% if observer_signed_in? %>
	      <% if @observer.name.present? %>
	        <h4>こんにちは、<%= @observer.name %>さん！</h4>
	      <% else %>
	        <h4>こんにちは！</h4>
	      <% end %>
	  	<% end %>
		</div>
		<div class="mt-1">
			<%= link_to "登録情報編集", edit_observer_registration_path(current_observer), class: "btn btn-outline-primary" %>
		</div>
		<div class="col-md-6">
			<div>
			  <div class="mt-4">
			    <h4>フォロー一覧</h4>
			    <div class="ms-3">
			    <% if @follows.present? %>
			    	<% @follows.each do |follow| %>
			    		<ul>
			    			<li class="fs-5">
			    			<%= link_to follow.learner.name, observer_learner_path(follow.learner_id) %>さん
			    			</li>
			    		</ul>
			    	<% end %>
			    <% else %>
			    	フォローしている人はいません
			    <% end %>
			    </div>
			  </div>
			  <div class="mt-4 fs-5">
			    <%= link_to "こちら", observer_search_path %>から学習者を検索
			  </div>
			</div>
		</div>

		<div class="col-md-6">
			<%= month_calendar do |date| %>
			  <%= date.day %>
			<% end %>
		</div>
	</div>
</div>