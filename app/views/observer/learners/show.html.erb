<div class="container">
	<div class="row mt-3">
		<div>
			<h3>次回のテストの目標</h3>
			<% @follow.goals.each do |goal| %>
				<ul>
					<li>
						<%= goal.body %>
					</li>
				</ul>
			<% end %>
		</div>
		<h3>
			テスト一覧
		</h3>
		<div class"mt-3">
			<ul class="mt-3">
				<% @tests.each do |test| %>
					<h4>
						<%= test.name %>
					</h4>
					<table class="table table-bordered table-hover align-middle mt-3">
						<thead>
							<tr>
								<th>科目</th>
								<th>得点</th>
								<th>満点</th>
								<th>得点率</th>
								<th>平均点</th>
							</tr>
						</thead>
						<% test.subjects.each do |s| %>
							<tbody>
								<tr>
									<td>
										<%= s.name %>
									</td>
									<td>
										<%= s.score %> 点
									</td>
									<td>
										<%= s.perfect %> 点
									</td>
									<td>
										<%= (s.score.to_f / s.perfect.to_f) * 100 %> %
									</td>
									<td>
										<%= s.average %> 点
									</td>
								</tr>
							</tbody>
						<% end %>
					</table>

					<div class="mt-3">
						<p>良かったところ<p>
						<li>
							<ul>
								<%= test.pros %>
							</ul>
						</li>
					</div>
					<div class="mt-3">
						<p>改善したいところ</p>
						<li>
							<ul>
								<%= test.cons %>
							</ul>
						</li>
					</div>
				<% end %>
			</ul>

			<div class="d-flex justify-content-center">
				<%= paginate @tests %>
			</div>
		</div>

		<div class="mb-3 d-flex justify-content-end">
			<%= link_to "トップページへ", observer_mypage_path(@observer), class: "fa fa-reply-all" %>
		</div>
	</div>
</div>