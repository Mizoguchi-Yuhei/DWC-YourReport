<div class="container">
  <div class="col-md-10 mx-auto mt-3 mb-3">
    <div class="mt-3">
      <h3>定期テスト 新規投稿</h3>
    </div>
    <div class="mt-3 form-group">
      <%= form_with model: [@learner, @test], local: true do |t| %>
        <%= t.label "テスト名" %>
        <%= t.text_field :name %>
        <%= t.hidden_field :learner_id, :value => current_learner.id %>
        <p>例）中学3年2学期中間テスト</p>
        <div class="tests mt-5">
          <h5>点数入力</h5>
	      	<p style="color: red;">注意）点数は半角で入力してください！</p>
          <%= t.fields_for :subjects do |u| %>
            <%= render "subject_fields", f: u %>
          <% end %>
          <div class="links mx-auto mt-3">
            <%= link_to_add_association "科目を追加", t, :subjects, class: "btn btn-outline-primary" %>
          </div>
        </div>
        <div class="mt-5">
          <h5>成績表の画像(任意)</h5>
          <%= t.attachment_field :image %>
        </div>
        <div class="mt-5">
          <div>
            <%= t.label "良かったところ" %>
          </div>
          <%= t.text_area :pros, class: "form-control" %>
        </div>
        <div class="mt-3">
          <div>
            <%= t.label "改善したいところ"%>
          </div>
          <%= t.text_area :cons, class: "form-control" %>
        </div>
        <div class="actions mt-3 mb-3">
          <%= t.submit "保存する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="mt-2 mb-3 d-flex justify-content-end">
			<%= link_to "トップページへ", learner_mypage_path(@learner), class: "fa fa-reply-all", 'data-turbolinks': false %>
		</div>
  </div>
</div>