<div class="container">
  <div class="col-md-10 mx-auto mt-3">
    <div class="mt-3">
      <h3>定期テスト 編集画面</h3>
    </div>
    <div class="mt-3 form-group">
		  <%= form_with model: [@learner, @test], local: true do |t| %>
	      <%= t.hidden_field :id, :value => @test.id %>
	      <%= t.hidden_field :learner_id, :value => current_learner.id %>
	      <%= t.label "テスト名" %>
	      <%= t.text_field :name %>
	      <p>例）中学3年2学期中間テスト</p>
	      <div class="tests mt-5">
	      	<h6>点数入力</h6>
	      	<p>注意）点数は半角で入力してください！</p>
	        <%= t.fields_for :subjects do |u| %>
	          <%= render "subject_fields", f: u %>
	        <% end %>
	        <div class="links mx-auto">
	          <%= link_to_add_association "科目を追加", t, :subjects, class: "btn btn-outline-primary" %>
	        </div>
	      </div>
	      <div class="mt-4">
          <h6>成績表の画像(任意)</h6>
          <%= t.attachment_field :image %>
        </div>
	      <div class="mt-5">
	        <div>
	        	<%= t.label "良かったところ" %>
	        </div>
	        <%= t.text_area :pros, class: "form-control" %>
	      </div>
	      <div class="mt-3">
	      	<div>
	        	<%= t.label "改善したいところ" %>
	      	</div>
	        <%= t.text_area :cons, class: "form-control" %>
	      </div>
	      <div class="actions mt-3 mb-3 text-center">
	        <%= t.submit "保存する", class: "btn btn-success" %>
	        <%= link_to "削除する", learner_test_path(@test), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
	      </div>
	    <% end %>
    </div>

		<div class="mb-3 d-flex justify-content-end">
			<%= link_to "トップページへ", learner_mypage_path(@learner), class: "fa fa-reply-all" %>
		</div>
  </div>
</div>