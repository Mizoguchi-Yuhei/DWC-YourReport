<div class="container">
  <div class="row mt-3 mx-auto">
    <div class="col-md-3">
      フォロワー
    </div>

    <div class="col-md-5">
      <h3>次の定期テストの目標</h3>
      <div>
        <% if @goals.present? %>
          <% @goals.each do |goal| %>
            <ul>
              <li><%= goal.body %></li>
            </ul>
            <div>
              <%= link_to "編集", edit_learner_goal_path(goal), class: "btn btn-primary" %>
              <%= link_to "削除", learner_goal_path(goal), method: :delete,  data: { confirm: '消去しますか?' }, class: "btn btn-danger" %>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "投稿する", new_learner_goal_path(@learner), class: "btn btn-outline-primary" %>
          </div>
        <% else %>
          <h4>まだ目標は設定していません。</h4>
          <div>
            <%= link_to "投稿する", new_learner_goal_path(@learner), class: "btn btn-outline-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <h3>過去の定期テスト一覧</h3>
      <div>
        <% if @tests.present? %>
          <% @tests.each do |t| %>
            <ul>
              <li>
                <%= link_to t.name, learner_test_path(t.id) %>
                </li>
            </ul>
          <% end %>
          <div>
            <%= link_to "投稿する", new_learner_test_path(@learner), class: "btn btn-outline-primary" %>
          </div>
        <% else %>
          <h4>まだ投稿されていません。</h4>
          <div>
            <%= link_to "投稿する", new_learner_test_path(@learner), class: "btn btn-outline-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>