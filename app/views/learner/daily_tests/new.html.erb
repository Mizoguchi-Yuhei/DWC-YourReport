<div class="container">
  <div class="col-md-8 mx-auto mt-3 mb-3">
    <div class="mt-3">
      <h3>日々のテスト 新規投稿</h3>
    </div>
    <div class="mt-3 form-group">
      <%= form_with model: [@learner, @daily_test], local: true do |t| %>
        <%= t.label "テスト名" %>
        <%= t.text_field :name %>
        <%= t.hidden_field :learner_id, :value => current_learner.id %>
        <p>例）高校1年 英単語テスト</p>
        <div class="tests mt-5">
          <h5>点数入力</h5>
	      	<p style="color: red;">注意）点数は半角で入力してください！</p>
          <%= t.fields_for :daily_scores do |u| %>
            <%= render "daily_score_fields", f: u %>
          <% end %>
          <div class="links mx-auto mt-3">
            <%= link_to_add_association "新しく追加", t, :daily_scores, class: "btn btn-outline-primary" %>
          </div>
        </div>

        <div class="actions mt-3 mb-3">
          <%= t.submit "保存する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="mt-2 mb-2 d-flex justify-content-end">
			<%= link_to "トップページへ", learner_mypage_path(@learner), class: "fa fa-reply-all", 'data-turbolinks': false %>
		</div>
  </div>
</div>