<div>
	<h6 class=mt-3>
		フォローリクエスト
	</h6>
	<table>
		<thead>
			<tr>
				<th>名前</th>
				<th></th>
			</tr>
		</thead>
		<% @requests.each do |request| %>
			<tbody>
				<tr>
					<td><%= request.observer.name %></td>
				</tr>
				<tr>
					<td>
						<%= link_to "フォロー承認", learner_allow_path(learner_id: current_learner.id, id: request.id), method: :post, class: "btn-sm btn-outline-success" %>
						 |
						<%= link_to "フォロー拒否", learner_observer_follow_path(learner_id: current_learner.id, id: request.id), method: :delete, class: "btn-sm btn-outline-danger" %>
					</td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>