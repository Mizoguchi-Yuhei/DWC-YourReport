<div class="container">
  <div class="col-md-10 mx-auto mt-3">
    <h3 class="mt-3">目標編集画面</h3>
    <div class="form-group">
      <%= form_with model: [@learner, @goal], local: true do |goal| %>
        <%= goal.hidden_field :id, :value => @goal.id %>
        <div class="mt-3">
          <%= goal.text_area :body, class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= goal.submit "更新する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="mt-3 mb-2 d-flex justify-content-end">
			<%= link_to "トップページへ", learner_mypage_path(@learner), class: "fa fa-reply-all", 'data-turbolinks': false %>
		</div>
  </div>
</div>