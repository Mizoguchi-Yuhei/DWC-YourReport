<div class="container">
  <div class="row col-md-6 mx-auto">
    <h2>新規登録</h2>
    <%= form_with model: @observer, url: observer_registration_path, id: 'new_observer', class: 'new_observer', local: true do |f| %>
      <%= render "observers/shared/error_messages", resource: resource %>

      <div class="field mt-3">
        <%= f.label :name, "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field mt-3">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <span>(<%= @minimum_password_length %>文字以上)</span>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mt-3 mb-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "observers/shared/links" %>
  </div>
</div>